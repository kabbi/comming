<resources>

    <attr name="colorDivider" format="color" />

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/white_</item>
        <item name="colorPrimaryDark">@color/black_</item>
        <item name="colorAccent">@color/blue_imcoming</item>
        <item name="colorControlNormal">@color/black_</item>
        <item name="colorControlHighlight">@color/blue_imcoming_light</item>
        <item name="colorButtonNormal">@color/blue_imcoming</item>
        <item name="colorDivider">@color/black_8_alpha</item>
        <item name="android:textColorPrimary">@color/dark_primary</item>
        <item name="android:textColorSecondary">@color/black_50_alpha</item>
        <item name="android:windowBackground">@color/white_</item>
    </style>

    <style name="PopupTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/blue_imcoming</item>
        <item name="android:colorBackground">@color/blue_imcoming</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

</resources>
